@model AutoTrack.Models.TaskItem
@{
    ViewData["Title"] = "Delete Task";
}

<div class="container py-4">
    <div class="card shadow-sm rounded-4 mx-auto" style="max-width: 600px;">
        <div class="card-body">
            <h2 class="fw-bold text-danger mb-3">Delete Task</h2>
            <h5 class="mb-4 text-muted">Are you sure you want to delete this task?</h5>
            <dl class="row mb-4">
                <dt class="col-sm-4">Title</dt>
                <dd class="col-sm-8 fw-semibold">@Model.Title</dd>
                <dt class="col-sm-4">Description</dt>
                <dd class="col-sm-8">@Model.Description</dd>
                <dt class="col-sm-4">Priority</dt>
                <dd class="col-sm-8"><span class="badge bg-warning text-dark">@Model.Priority</span></dd>
                <dt class="col-sm-4">Due Date</dt>
                <dd class="col-sm-8">@Model.DueDate.ToShortDateString()</dd>
                <dt class="col-sm-4">Status</dt>
                <dd class="col-sm-8"><span class="badge bg-info text-dark">@Model.Status</span></dd>
                <dt class="col-sm-4">Assigned To</dt>
                <dd class="col-sm-8">
                    @if (Model.AssignedTo != null)
                    {
                        <span class="fw-semibold">@($"{Model.AssignedTo.FirstName} {Model.AssignedTo.LastName}")</span>
                        <span class="text-muted">(@Model.AssignedTo.Email)</span>
                    }
                    else
                    {
                        <span class="text-muted">Unassigned</span>
                    }
                </dd>
            </dl>
            <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-flex gap-2">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger px-4 fw-bold">Delete</button>
                <a asp-action="Index" class="btn btn-outline-secondary px-4">Cancel</a>
            </form>
        </div>
    </div>
</div>
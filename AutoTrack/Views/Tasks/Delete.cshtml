@model AutoTrack.Models.TaskItem
@{
    ViewData["Title"] = "Delete Task";
}

<h2>Delete Task</h2>

<h4>Are you sure you want to delete this task?</h4>
<div>
    <dl class="row">
        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.Title</dd>
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>
        <dt class="col-sm-2">Priority</dt>
        <dd class="col-sm-10">@Model.Priority</dd>
        <dt class="col-sm-2">Due Date</dt>
        <dd class="col-sm-10">@Model.DueDate.ToShortDateString()</dd>
        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Status</dd>
        <dt class="col-sm-2">Assigned To</dt>
        <dd class="col-sm-10">
            @if (Model.AssignedTo != null)
            {
                @($"{Model.AssignedTo.FirstName} {Model.AssignedTo.LastName} ({Model.AssignedTo.Email})")
            }
            else
            {
                <span class="text-muted">Unassigned</span>
            }
        </dd>
    </dl>
</div>

<form asp-action="Delete" asp-route-id="@Model.Id" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
